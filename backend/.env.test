# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="mysql://ekum:24673832@localhost:3306/cloudscribe_test"
PORT=3001
NODE_ENV=test
JWT_SECRET=test-secret-key
JWT_EXPIRES_IN=1h
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_PROTECTED_MAX=50
IP_BLOCK_DURATION=86400000
CSRF_SECRET=your-csrf-secret-key-change-this
REDIS_URL="redis://localhost:6379/1"
REDIS_PREFIX=cloudscribe_test
CACHE_TTL=3600
CACHE_ENABLED=false
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@test.com
SMTP_PASS=test-pass
SMTP_FROM=noreply@test.com
LOG_LEVEL=error
LOG_DIR=logs/test
FRONTEND_URL=http://localhost:3000

# Email Configuration
SMTP_FROM_NAME=CloudScribe
SMTP_FROM_EMAIL=noreply@cloudscribe.com
EMAIL_QUEUE_PREFIX=cloudscribe_email
EMAIL_VERIFICATION_EXPIRY=86400000  # 24 hours in milliseconds
PASSWORD_RESET_EXPIRY=3600000       # 1 hour in milliseconds

# Docker Configuration
COMPOSE_PROJECT_NAME=cloudscribe

# Database Configuration
MYSQL_ROOT_PASSWORD=your-root-password
MYSQL_DATABASE=cloudscribe
MYSQL_USER=cloudscribe
MYSQL_PASSWORD=your-db-password

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/backups/cloudscribe

# Production Configuration
PRODUCTION_HOST=your-production-host
PRODUCTION_SSH_KEY=/path/to/ssh/key
PRODUCTION_USER=deploy

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
